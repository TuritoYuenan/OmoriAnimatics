{
	"name": "omori-animatics",
	"author": "Turito Yuenan",
	"description": "Collection of Youtube's OMORI animatics",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev --open",
		"build": "vite build",
		"serve": "vite preview",
		"convert": "python ./convert.py",
		"check-format": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^2.4.6",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"svelte": "^4.2.2",
		"vite": "^4.5.0"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"singleQuote": true,
		"bracketSameLine": true,
		"trailingComma": "none",
		"quoteProps": "preserve",
		"plugins": [
			"prettier-plugin-svelte"
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	}
}
